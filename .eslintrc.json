{
	"extends": ["eslint:recommended"],
	"ignorePatterns": ["**/moses.js","dist/**"],
	"overrides": [
		{
			// Typescript files
			"files": ["src/**/*.ts", "secrets/*.js", "jest.config.js"],
			"parserOptions": {
				"ecmaVersion": "latest",
				"sourceType": "module"
			},
			"env": {
				"es2021": true,
				"node": true
			},

			"parser": "@typescript-eslint/parser",
			"plugins": ["@typescript-eslint"],
			"rules": {
				"@typescript-eslint/no-empty-function": [
					"warn",
					{ "allow": ["arrowFunctions"] }
				],
				"@typescript-eslint/no-explicit-any": "off",
				"@typescript-eslint/naming-convention": [
					"warn",
					{
						"selector": "default",
						"format": ["camelCase"]
					},

					{
						"selector": "variable",
						"format": ["camelCase", "UPPER_CASE"]
					},
					{
						"selector": "parameter",
						"format": ["camelCase"],
						"leadingUnderscore": "allow"
					},

					{
						"selector": "memberLike",
						"modifiers": ["private"],
						"format": ["camelCase"],
						"leadingUnderscore": "require"
					},

					{
						"selector": "typeLike",
						"format": ["PascalCase"]
					},
					{ "selector": "objectLiteralProperty", "format": null }
				]
			},
			"extends": ["plugin:@typescript-eslint/recommended"]
		},
		{
			// Typescript files
			"files": ["src/frontend/dash/*.ts"],
			"parser": "@typescript-eslint/parser",
			"plugins": ["@typescript-eslint"],
			"extends": ["plugin:@typescript-eslint/recommended"],
			"parserOptions": {
				"ecmaVersion": "latest",
				"sourceType": "module"
			},
			"env": {
				"es2021": true,
				"browser": true
			}
		},
		{
			// Secrets files
			"files": ["secrets/*.js"],
			"rules": {
				"@typescript-eslint/naming-convention": "off"
			}
		},
		{
			"files": ["build.js"],
			"parserOptions": {
				"ecmaVersion": "latest",
				"sourceType": "module"
			},
			"env": {
				"node": true
			}
		}
	]
}
