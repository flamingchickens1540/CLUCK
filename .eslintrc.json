{
	"extends": ["eslint:recommended"],
	"ignorePatterns": ["www/grid/script/moses.js"],
	"overrides": [
		{
			// Typescript files
			"files": ["**/*.ts", "secrets/*.js", "jest.config.js"],
			"parserOptions": {
				"ecmaVersion": "latest",
				"sourceType": "module"
			},
			"env": {
				"es2021": true,
				"node": true
			},

			"parser": "@typescript-eslint/parser",
			"plugins": ["@typescript-eslint"],
			"rules": {
				"@typescript-eslint/no-empty-function": [
					"warn",
					{ "allow": ["arrowFunctions"] }
				],
				"@typescript-eslint/no-explicit-any": "off",
				"@typescript-eslint/naming-convention": [
					"warn",
					{
						"selector": "default",
						"format": ["camelCase"]
					},

					{
						"selector": "variable",
						"format": ["camelCase", "UPPER_CASE"]
					},
					{
						"selector": "parameter",
						"format": ["camelCase"],
						"leadingUnderscore": "allow"
					},

					{
						"selector": "memberLike",
						"modifiers": ["private"],
						"format": ["camelCase"],
						"leadingUnderscore": "require"
					},

					{
						"selector": "typeLike",
						"format": ["PascalCase"]
					},
					{ "selector": "objectLiteralProperty", "format": null }
				]
			},
			"extends": ["plugin:@typescript-eslint/recommended"]
		},
		{
			// Javascript files
			"files": "www/**/*.js",
			"parser": "@babel/eslint-parser",

			"parserOptions": {
				"ecmaVersion": "latest",
				"sourceType": "script"
			},
			"env": {
				"es2021": true,
				"browser": true
			},
			"rules": {
				"no-constant-condition": ["error", { "checkLoops": false }]
			},
			"globals": {
				"basepath": "readonly",
				"baseurl": "readonly",
				"api_url": "readonly"
			}
		}
	]
}
