{
    "name": "cluck",
    "type": "module",
    "scripts": {
        "dev": "run-p -c watch:**",
        "dev:frontend": "run-p -c serve build:css watch:frontend",
        "watch:backend": "bun --watch src/index.ts",
        "watch:css": "tailwindcss -i ./src/app.css -o static/app.css --watch",
        "watch:frontend": "bunx esbuild-frontend.ts --watch",
        "build:css": "tailwindcss -i ./src/app.css -o static/app.css --minify",
        "build:frontend": "bun esbuild-frontend.ts",
        "build:backend": "bun build --minify --target=bun src/index.ts --outfile=build/index.js",
        "build": "run-p -c  build:**",
        "prod": "NODE_ENV=prod node --enable-source-maps build/index.js",
        "lint:style": "prettier --check .",
        "lint:code": "tsc --noEmit -p . && eslint . -c eslint.config.js",
        "lint": "bun run lint:code && bun run lint:style",
        "format": "prettier --write .",
        "createaccount": "bun dev/create_account.ts $1 $2 $3"
    },
    "dependencies": {
        "@googleapis/sheets": "^9.0.0",
        "@hono/node-server": "^1.12.0",
        "@prisma/adapter-pg": "^7.0.0",
        "@prisma/client": "^7.0.0",
        "@slack/bolt": "^4.0.0-rc.1",
        "@slack/web-api": "^7",
        "ag-grid-community": "^32.0.2",
        "async-lock": "^1.4.1",
        "caniuse-lite": "^1.0.30001756",
        "config": "^3.3.12",
        "core-js-pure": "^3.37.1",
        "dotenv": "^17.2.3",
        "google-auth-library": "^9.11.0",
        "hono": "^4.10.6",
        "node-schedule": "^2.1.1",
        "pino": "^9.3.1",
        "pino-pretty": "^11.2.1",
        "quickchart-js": "^3.1.3",
        "reflect-metadata": "^0.2.2",
        "rss-parser": "^3.13.0",
        "sanitize-html": "^2.13.0",
        "slack-block-builder": "^2.8.0",
        "socket.io": "^4.7.5",
        "socket.io-client": "^4.7.5",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@3c1u/bun-run-all": "^0.1.2",
        "@chialab/esbuild-plugin-html": "^0.18.2",
        "@eslint/js": "^9.6.0",
        "@faker-js/faker": "^8.4.1",
        "@types/async-lock": "^1.4.2",
        "@types/config": "^3.3.4",
        "@types/core-js": "^2.5.8",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.14.11",
        "@types/node-schedule": "^2.1.7",
        "@types/sanitize-html": "^2.13.0",
        "@types/validator": "^13.12.0",
        "@types/ws": "^8.5.11",
        "autoprefixer": "^10.4.19",
        "esbuild": "^0.25.4",
        "esbuild-sass-plugin": "^3.3.1",
        "eslint": "^9.9.0",
        "eslint-formatter-markdown": "^1.0.4",
        "htmlnano": "^2.1.1",
        "pre-commit": "^1.2.2",
        "prettier": "^3.3.3",
        "prisma": "^7.0.0",
        "tailwindcss": "^3.4.10",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.2.0",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^3.1.3"
    },
    "overrides": {
        "uri-js": "npm:uri-js-replace"
    },
    "pre-commit": [
        "lint:code",
        "format"
    ]
}
